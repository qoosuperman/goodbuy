<div class="box text-center">
  <div class="logobox">
    <%= image_tag("logo.png", :alt => "logo" ,class:'logo') %>
    <p class="p1"><%=t("groups.login_des1")%></p><p class="p2"><%=t("groups.login_des2")%></p>
  </div>
  <div class="content rounded">
    <h2 class='signinh2 h3 mb-3'> <%= t("devise.login") %> </h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:'form-signin') do |f| %>
        <div class="field mt-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:t("devise.email") %>
          <br/>
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control",placeholder:t("devise.password") %>
        </div>
  
        <% if devise_mapping.rememberable? %>
          <div class="field checkbox mb-3 mt-1">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, value: t("devise.remember_me") %>
          </div>
        <% end %>
  
        <div class="actions">
          <%= f.submit t("devise.login"), class:'btn btn-md btn-login btn-block'%>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %>
  
        <div class="lan-btn mt-3">
          <ul class="change_language d-flex justify-content-center">
            <li><%= link_to '繁體中文', new_user_session_path(locale: "zh-TW"), class: "pc-sidebar-language mr-3", :locale => "zh-TW"%></li>
            <li><%= link_to 'English', new_user_session_path(locale: "en"), class: "pc-sidebar-language mr-3", :locale => "en"%></li>
            <li><%= link_to '日本語', new_user_session_path(locale: "jp"), class: "pc-sidebar-language", :locale => "jp" %></li>
          </ul>
        </div>
      </div>
  </div>

</div>

